---
const projects = [
  {
    title: 'Zona Gol',
    description: 'Landing page moderna para plataforma deportiva con diseño atractivo y optimizada para conversión.',
    image: '/zona-gol.jpeg',
    tags: ['Next.js', 'TypeScript', 'Tailwind', 'SEO'],
    category: 'Landing',
    link: 'https://zona-gol.com',
    github: '#',
    featured: true
  },
  {
    title: 'Zona Gol Admin',
    description: 'Panel de administración para gestión de contenido, usuarios, ligas y estadísticas de la plataforma Zona Gol.',
    image: '/zona-gol-admin.jpeg',
    tags: ['Flutter', 'React', 'TypeScript', 'Node.js'],
    category: 'Dashboard',
    link: 'https://admin.zona-gol.com',
    github: '#',
    featured: true
  },
  {
    title: 'Zona Play',
    description: 'Plataforma de streaming y contenido deportivo en vivo con reproductor personalizado y sistema de suscripciones.',
    image: '/zona-play.jpeg',
    tags: ['Flutter', 'Next.js', 'Mux', 'HLS'],
    category: 'Streaming',
    link: 'https://admin.zona-gol.com/play',
    github: '#',
    featured: true
  },
  {
    title: 'Real-time Analytics Dashboard',
    description: 'Dashboard de análisis en tiempo real con visualizaciones interactivas y predicciones ML.',
    image: '/projects/project-4.jpg',
    tags: ['React', 'D3.js', 'WebSocket', 'Python'],
    category: 'Data',
    link: '#',
    github: '#',
    featured: false
  },
  {
    title: 'Workflow Automation Bot',
    description: 'Bot inteligente para automatización de workflows empresariales con integración a 50+ servicios.',
    image: '/projects/project-5.jpg',
    tags: ['Node.js', 'Redis', 'Docker', 'Slack API'],
    category: 'Automation',
    link: '#',
    github: '#',
    featured: false
  },
  {
    title: 'Smart Inventory System',
    description: 'Sistema de gestión de inventario con predicción de demanda usando Machine Learning.',
    image: '/projects/project-6.jpg',
    tags: ['Python', 'TensorFlow', 'React', 'MongoDB'],
    category: 'AI/ML',
    link: '#',
    github: '#',
    featured: false
  }
];

const featuredProjects = projects.filter(p => p.featured);
const otherProjects = projects.filter(p => !p.featured);
---

<section class="projects section" id="proyectos">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header animate-on-scroll">
      <span class="section-tag">// Proyectos</span>
      <h2 class="section-title">
        Trabajo <span class="gradient-text">destacado</span>
      </h2>
      <p class="section-description">
        Una selección de proyectos que demuestran mi capacidad para resolver
        problemas complejos con soluciones elegantes.
      </p>
    </div>

    <!-- Featured Projects -->
    <div class="featured-projects">
      {featuredProjects.map((project, index) => (
        <article class={`project-card featured animate-on-scroll delay-${index + 1}`}>
          <div class="project-image">
            {project.image && !project.image.includes('project-') ? (
              <img src={project.image} alt={project.title} class="project-img" />
            ) : (
              <div class="project-placeholder">
                <div class="placeholder-grid">
                  <div class="placeholder-line"></div>
                  <div class="placeholder-line"></div>
                  <div class="placeholder-line"></div>
                  <div class="placeholder-box"></div>
                </div>
                <span class="placeholder-text">{project.category}</span>
              </div>
            )}
            <div class="project-overlay">
              <div class="project-links">
                <a href={project.link} class="project-link" aria-label="Ver proyecto">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3"/>
                  </svg>
                </a>
                <a href={project.github} class="project-link" aria-label="Ver código">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 00-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0020 4.77 5.07 5.07 0 0019.91 1S18.73.65 16 2.48a13.38 13.38 0 00-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 005 4.77a5.44 5.44 0 00-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 009 18.13V22"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
          <div class="project-content">
            <span class="project-category">{project.category}</span>
            <h3 class="project-title">{project.title}</h3>
            <p class="project-description">{project.description}</p>
            <div class="project-tags">
              {project.tags.map(tag => (
                <span class="project-tag">{tag}</span>
              ))}
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- Other Projects -->
    <div class="other-projects">
      <h3 class="other-title animate-on-scroll">Otros Proyectos</h3>
      <div class="other-grid">
        {otherProjects.map((project, index) => (
          <article class={`project-card-small animate-on-scroll delay-${index + 1}`}>
            <div class="card-header">
              <svg class="folder-icon" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M22 19a2 2 0 01-2 2H4a2 2 0 01-2-2V5a2 2 0 012-2h5l2 3h9a2 2 0 012 2z"/>
              </svg>
              <div class="card-links">
                <a href={project.link} class="card-link" aria-label="Ver proyecto">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3"/>
                  </svg>
                </a>
                <a href={project.github} class="card-link" aria-label="Ver código">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 00-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0020 4.77 5.07 5.07 0 0019.91 1S18.73.65 16 2.48a13.38 13.38 0 00-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 005 4.77a5.44 5.44 0 00-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 009 18.13V22"/>
                  </svg>
                </a>
              </div>
            </div>
            <h4 class="card-title">{project.title}</h4>
            <p class="card-description">{project.description}</p>
            <div class="card-tags">
              {project.tags.slice(0, 3).map(tag => (
                <span class="card-tag">{tag}</span>
              ))}
            </div>
          </article>
        ))}
      </div>
    </div>

    <!-- View All CTA -->
    <div class="projects-cta animate-on-scroll">
      <a href="https://github.com/Codelab-ai-dev" target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 00-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0020 4.77 5.07 5.07 0 0019.91 1S18.73.65 16 2.48a13.38 13.38 0 00-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 005 4.77a5.44 5.44 0 00-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 009 18.13V22"/>
        </svg>
        <span>Ver más en GitHub</span>
      </a>
    </div>
  </div>
</section>

<style>
  .projects {
    position: relative;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--space-lg);
  }

  .section-tag {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--cyan);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    display: block;
    margin-bottom: var(--space-sm);
  }

  .section-description {
    font-size: 1.125rem;
  }

  /* Featured Projects */
  .featured-projects {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .project-card.featured {
    background: var(--surface);
    border: 1px solid var(--surface-elevated);
    border-radius: 8px;
    overflow: hidden;
    transition: var(--transition-medium);
  }

  .project-card.featured:hover {
    transform: translateY(-8px);
    border-color: var(--cyan-dim);
  }

  /* Project Image */
  .project-image {
    position: relative;
    aspect-ratio: 16 / 6;
    overflow: hidden;
    background: var(--abyss);
  }

  .project-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    background: var(--abyss);
    transition: var(--transition-medium);
  }

  .project-card.featured:hover .project-img {
    transform: scale(1.05);
  }

  .project-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space-md);
    position: relative;
  }

  .placeholder-grid {
    display: flex;
    flex-direction: column;
    gap: 8px;
    opacity: 0.3;
  }

  .placeholder-line {
    width: 120px;
    height: 8px;
    background: var(--surface-elevated);
    border-radius: 4px;
  }

  .placeholder-line:nth-child(2) { width: 80px; }
  .placeholder-line:nth-child(3) { width: 100px; }

  .placeholder-box {
    width: 60px;
    height: 60px;
    background: var(--surface-elevated);
    border-radius: 8px;
    margin-top: 8px;
  }

  .placeholder-text {
    position: absolute;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--cyan);
    text-transform: uppercase;
    letter-spacing: 0.2em;
  }

  .project-overlay {
    position: absolute;
    inset: 0;
    background: rgba(3, 3, 8, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: var(--transition-fast);
  }

  .project-card.featured:hover .project-overlay {
    opacity: 1;
  }

  .project-links {
    display: flex;
    gap: var(--space-sm);
  }

  .project-link {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--surface);
    border: 1px solid var(--surface-elevated);
    border-radius: 50%;
    color: var(--text-primary);
    transition: var(--transition-fast);
    transform: translateY(10px);
  }

  .project-card.featured:hover .project-link {
    transform: translateY(0);
  }

  .project-link:hover {
    border-color: var(--cyan);
    color: var(--cyan);
    box-shadow: var(--glow-cyan);
  }

  /* Project Content */
  .project-content {
    padding: var(--space-md);
  }

  .project-category {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    color: var(--cyan);
    text-transform: uppercase;
    letter-spacing: 0.2em;
  }

  .project-title {
    font-size: 1.25rem;
    margin: 0.5rem 0;
    color: var(--text-primary);
  }

  .project-description {
    font-size: 0.875rem;
    line-height: 1.7;
    margin-bottom: var(--space-sm);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .project-tag {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    padding: 0.25rem 0.5rem;
    background: var(--abyss);
    border-radius: 4px;
    color: var(--text-muted);
  }

  /* Other Projects */
  .other-projects {
    margin-bottom: var(--space-lg);
  }

  .other-title {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    text-align: center;
    margin-bottom: var(--space-md);
  }

  .other-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
  }

  .project-card-small {
    background: var(--surface);
    border: 1px solid var(--surface-elevated);
    border-radius: 8px;
    padding: var(--space-md);
    transition: var(--transition-medium);
    display: flex;
    flex-direction: column;
  }

  .project-card-small:hover {
    transform: translateY(-4px);
    border-color: var(--cyan-dim);
  }

  .card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: var(--space-sm);
  }

  .folder-icon {
    color: var(--cyan);
  }

  .card-links {
    display: flex;
    gap: 0.5rem;
  }

  .card-link {
    color: var(--text-muted);
    transition: var(--transition-fast);
  }

  .card-link:hover {
    color: var(--cyan);
  }

  .card-title {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .card-description {
    font-size: 0.875rem;
    line-height: 1.6;
    flex-grow: 1;
    margin-bottom: var(--space-sm);
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .card-tag {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    color: var(--text-muted);
  }

  .card-tag::before {
    content: '#';
    color: var(--cyan-dim);
  }

  /* CTA */
  .projects-cta {
    text-align: center;
  }

  .projects-cta .btn {
    gap: 0.5rem;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .featured-projects {
      grid-template-columns: 1fr;
    }

    .other-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .other-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
