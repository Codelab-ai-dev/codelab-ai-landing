<style>
  .about {
    position: relative;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-lg);
    align-items: start;
  }

  /* Visual Column */
  .about-visual {
    position: sticky;
    top: 120px;
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  /* Code Window */
  .code-window {
    background: var(--surface);
    border: 1px solid var(--surface-elevated);
    border-radius: 8px;
    overflow: hidden;
  }

  .code-header {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: 0.75rem 1rem;
    background: var(--abyss);
    border-bottom: 1px solid var(--surface-elevated);
  }

  .code-dots {
    display: flex;
    gap: 6px;
  }

  .code-dots span {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .code-dots span:nth-child(1) { background: #ff5f57; }
  .code-dots span:nth-child(2) { background: #ffbd2e; }
  .code-dots span:nth-child(3) { background: #28ca42; }

  .code-filename {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .code-content {
    padding: 1.5rem;
    margin: 0;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    line-height: 1.8;
    overflow-x: auto;
  }

  .code-content code {
    display: block;
  }

  .code-bracket { color: var(--text-secondary); }
  .code-key { color: var(--cyan); }
  .code-string { color: var(--terminal-green); }
  .code-boolean { color: var(--magenta); }

  /* Stats Grid */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-sm);
  }

  .stat-item {
    background: var(--surface);
    border: 1px solid var(--surface-elevated);
    border-radius: 8px;
    padding: var(--space-sm);
    text-align: center;
    transition: var(--transition-fast);
    animation: fade-in-up 0.5s var(--ease-out-expo) forwards;
    animation-delay: var(--stat-delay);
    opacity: 0;
  }

  .stat-item:hover {
    border-color: var(--cyan-dim);
    transform: translateY(-2px);
  }

  .stat-value {
    display: block;
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1;
  }

  .stat-label {
    display: block;
    font-family: var(--font-mono);
    font-size: 0.625rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-top: 0.5rem;
  }

  /* Content Column */
  .about-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .section-header {
    text-align: left;
    margin-bottom: 0;
  }

  .section-tag {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--cyan);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    display: block;
    margin-bottom: var(--space-sm);
  }

  /* About Text */
  .about-text {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .about-text p {
    font-size: 1.0625rem;
    line-height: 1.8;
  }

  .about-text strong {
    color: var(--text-primary);
  }

  .about-text .highlight {
    color: var(--cyan);
    font-weight: 500;
  }

  /* Tech Stack */
  .tech-stack {
    padding: var(--space-md);
    background: var(--surface);
    border: 1px solid var(--surface-elevated);
    border-radius: 8px;
  }

  .tech-title {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: var(--space-sm);
  }

  .tech-categories {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .tech-category {
    display: flex;
    align-items: flex-start;
    gap: var(--space-sm);
  }

  .tech-category-name {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--cyan);
    min-width: 100px;
    padding-top: 0.25rem;
  }

  .tech-items {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-item {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    background: var(--abyss);
    border: 1px solid var(--surface-elevated);
    border-radius: 4px;
    color: var(--text-secondary);
    transition: var(--transition-fast);
  }

  .tech-item:hover {
    border-color: var(--cyan-dim);
    color: var(--text-primary);
  }

  /* CTA */
  .about-cta {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .about-cta .btn svg {
    transition: var(--transition-fast);
  }

  .about-cta .btn:hover svg {
    transform: translateX(4px);
  }

  .about-cta .btn-secondary svg {
    margin-right: 0.25rem;
  }

  .about-cta .btn-secondary:hover svg {
    transform: translateY(2px);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .about-grid {
      grid-template-columns: 1fr;
    }

    .about-visual {
      position: relative;
      top: 0;
      order: 2;
    }
  }

  @media (max-width: 640px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .tech-category {
      flex-direction: column;
      gap: 0.5rem;
    }

    .tech-category-name {
      min-width: auto;
    }

    .about-cta {
      flex-direction: column;
    }

    .about-cta .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
